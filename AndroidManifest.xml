<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toilet22.ishankedemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="14" />
    
	<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	
	 
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/iShangkeActionBarTheme" >
        
        <activity
            android:name="com.toilet22.ishankedemo.MainActivity"
            android:theme="@style/iShangkeActionBarTheme"
            android:label="@string/app_name" 
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.toilet22.ishankedemo.SearchResultActivity"
            android:theme="@style/iShangkeActionBarTheme"
            android:label="@string/search_result" 
            android:launchMode="singleTop">      
        </activity>
        
        <activity
            android:name="com.toilet22.ishankedemo.SearchCourseActivity"
            android:theme="@style/iShangkeActionBarTheme"
            android:label="@string/search_title" 
            android:launchMode="singleTop">
        </activity>
        
        <activity
            android:name="com.toilet22.ishankedemo.CourseDetailActivity"
            android:theme="@style/iShangkeActionBarTheme"
            android:label="@string/detail_ttl"
            android:launchMode="singleTop" >
        </activity>
        
        <activity
            android:name="com.toilet22.ishankedemo.DownloadChosenCoursesActivity"
            android:theme="@style/iShangkeActionBarTheme"
            android:label="@string/download_ttl"
            android:launchMode="singleTop" >
        </activity>
        
    </application>

</manifest>
